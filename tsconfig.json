{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "bin",
    "rootDir": "",
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "types": ["node"],
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    "useUnknownInCatchVariables": false // TypeScript 4.4+ only!
  },
  "buildOptions": {
    "incremental": true
  },
  "include": ["src", "src/forEachAsync.ts"]
}
